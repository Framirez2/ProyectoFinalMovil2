<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalMovil2.Views.VistaTipoPago">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="20">
            <Label Text="Elija una forma de pago" FontAttributes="Bold" FontSize="24" HorizontalTextAlignment="Center" TextColor="#333333"/>

            <Button 
                Text="Pagar en Sitio" 
                TextColor="White" 
                BackgroundColor="#FBA1B7"
                CornerRadius="10"
                Clicked="Btn_PagarSitio"/>

            <Button 
                Text="Pagar Con Tarjeta" 
                TextColor="White" 
                BackgroundColor="#FBA1B7"
                CornerRadius="10"
                Clicked="Btn_PagarTarjeta"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
